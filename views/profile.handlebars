<div class="content">
    {{> logged}}

    <div class="berlin_container">
        {{> berlin}}
    </div>
    <h2>Would you like to tell us a little bit more about yourself?</h2>

    {{#if error}}
        {{> error}}
    {{/if}}

    <div class="login-container">
        <form action="/profile" method="POST">
            <p>Age</p>
            <input type="text" name="age" required autocomplete="off">
            <p>City</p>
            <input type="text" name="city" autocomplete="off">
            <p>Home page</p>
            <input type="text" name="url" autocomplete="off">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button id="submitBtn" type="submit">Continue!</button>
        </form>
        <p><a href="/petition">Skip this!</a></p>
    </div>

</div>
