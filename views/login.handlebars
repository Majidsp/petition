<div class="content">
    {{> logo}}
    <h3>Please log in!</h3>
    {{#if error}}
        {{> error}}
    {{/if}}
    <form action="/login" method="POST">
        <input type="email" name="email" placeholder="Your email address..." autocomplete="off">
        <input type="password" name="password" placeholder="Your password..." autocomplete="off">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button id="submitBtn" type="submit">Log in</button>
    </form>
</div>
